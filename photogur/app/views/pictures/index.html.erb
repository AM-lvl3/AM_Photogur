
<h1>[photogur]</h1>

<%= link_to "upload", "/pictures/new" %>


<ul>
<% @newest_first.each do |picture| %>
		<li><%= picture.title %></li>
		<%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
	<% end %>
</ul>

<h2>older [photos] - one month+</h2>
<ul>
<% @created_before.each do |picture| %>
		<li><%= picture.title %></li>
		<%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
	<% end %>
</ul>

<%= Picture.created_before.count %>

